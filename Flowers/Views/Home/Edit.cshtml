@model Flowers.Models.Shop
@{
	ViewBag.Title = "Редактирование товара";
}

<div class="col-md-6 offset-md-3">
	<form asp-action="edit" asp-controller="home">
		<div class="form-group">
			<label asp-for="Name" class="control-label">Название</label>
			<input type="text" asp-for="Name" class="form-control">
		</div>
		<div class="form-group">
			<label asp-for="Price" class="control-label">Цена</label>
			<input type="text" asp-for="Price" class="form-control">
		</div>
		<div class="form-group">
			<label asp-for="Amount" class="control-label">Количество</label>
			<input type="text" asp-for="Amount" class="form-control">
		</div>
		<div class="form-group">
			<input asp-for="Image" type="file" class="mt-1 mb-3">
		</div>
		<div class="form-group text-center">
			<input type="submit" value="Сохранить" class="btn-main">
		</div>
	</form>
</div>